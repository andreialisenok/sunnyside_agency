{
  "version": "1.0.0",
  "name": "web-starter-kit",
  "description": "Web Starter Kit for projects",
  "author": "Andrey Alisenok",
  "repository": "https://github.com/aalisenok/gulp-start.git",
  "keywords": [
    "git",
    "push",
    "commit",
    "branch",
    "deploy",
    "deployment",
    "publish",
    "site",
    "website",
    "gulp",
    "gulpplugin",
    "gh-pages",
    "dist",
    "github",
    "webpack"
  ],
  "license": "MIT",
  "scripts": {
    "start": "gulp development --development",
    "build": "gulp production --production",
    "del": "gulp del",
    "zip": "npm run tests && npm run build && gulp zip",
    "test": "npm run test:pug && npm run test:styles && npm run test:js",
    "test:pug": "glob-exec \"./src/**/*.pug\" -- \"pug-lint {{files.join(' ')}}\"",
    "test:styles": "stylelint --fix --color ./src/**/*.scss",
    "test:js": "eslint --fix --color ./src/**/*.js",
    "bem-c": "bem create -l src/view/components",
    "bem-l": "bem create -l src/view/layout",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/register": "^7.14.5",
    "@prettier/plugin-pug": "^1.15.3",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "bem-tools-core": "^0.0.3",
    "bem-tools-create": "^2.3.0",
    "browser-sync": "^2.26.14",
    "browserslist": "^4.16.6",
    "del": "^6.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "glob-exec": "^0.1.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-changed": "^4.0.3",
    "gulp-clean-css": "^4.3.0",
    "gulp-debug": "^4.0.0",
    "gulp-ext-replace": "^0.3.0",
    "gulp-favicons": "^3.0.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-html-bem-validator": "^1.0.5",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-svg-sprite": "^1.5.0",
    "gulp-ttf2woff": "^1.1.1",
    "gulp-ttf2woff2": "^4.0.1",
    "gulp-webp": "^4.0.1",
    "gulp-zip": "^5.1.0",
    "gulp.spritesmith": "^6.12.1",
    "husky": "^7.0.1",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-zopfli": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "pug-lint": "^2.6.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-selector-bem-pattern": "^2.1.0",
    "vinyl-buffer": "^1.0.1",
    "webpack": "^5.39.1",
    "webpack-stream": "^6.1.2",
    "yargs": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.pug": "pug-lint",
    "*.scss": "stylelint --fix --color",
    "*.js": "eslint --fix --color",
    "*.{js,md,html,css,pug}": "prettier --write"
  }
}
